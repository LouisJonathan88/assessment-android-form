<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5F5"
    android:fillViewport="true"
    tools:context=".ResultActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp"
        android:background="@android:color/white"
        android:layout_margin="16dp">

        <!-- Judul -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/title_result"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#6200EE"
            android:fontFamily="sans-serif-medium"
            android:layout_marginBottom="24dp" />

        <!-- NIM -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nim"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_nim_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Nama -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/nama"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_nama_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Semester -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/semester"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_semester_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Informasi Perangkat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_perangkat_device"
            android:textColor="#6200EE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Jenis Perangkat -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rad_device"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_device_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Sistem Operasi -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rad_os"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_os_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Versi OS -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/versi_os"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_versi_os_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- RAM -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ram"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_ram_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- CPU -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cpu"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_cpu_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!--Deployment -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rad_deploy"
            android:textColor="#6200EE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />
        <TextView
            android:id="@+id/txt_deploy_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Mobile Device -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_perangkat_mobile"
            android:textColor="#6200EE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />

        <!-- Merk HP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/merk_hp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_merk_hp_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Versi OS HP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/versi_os_hp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_versi_os_hp_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Ukuran HP -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/ukuran_hp"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_ukuran_hp_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Internet -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rad_internet"
            android:textColor="#6200EE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />
        <TextView
            android:id="@+id/txt_internet_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Install Android -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/install_android"
            android:textColor="#6200EE"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="12dp" />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/rad_install_android"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_install_android_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="12dp" />

        <!-- Versi Android -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/versi_install_android"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="#444444"
            android:layout_marginBottom="4dp" />
        <TextView
            android:id="@+id/txt_versi_install_android_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:layout_marginBottom="24dp" />

        <!-- Tombol Submit -->
        <Button
            android:id="@+id/btn_info_developer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/info_developer"
            android:backgroundTint="#6200EE"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:layout_marginBottom="16dp" />
    </LinearLayout>
</ScrollView>
